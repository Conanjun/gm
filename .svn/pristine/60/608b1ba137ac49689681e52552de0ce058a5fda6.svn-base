<extend name="Public/base_choose" />
<block name="body">
	<script src='__JSNEW__/jquery.validate.js' type='text/javascript'></script>
    <script src="__JSNEW__/ckeditor/ckeditor.js"></script>
    <link href="__CSS__/n.css" rel="stylesheet"  type="text/css" />
	<script>
		$(function(){
			$('form').validate({
				errorPlacement: function (error, element) {
					$(element).next('.field_notice').hide();
					$(element).parent().next().append(error);
				},
				onkeyup: false,
				rules: {
				},
				messages: {
				}
			});
		});

	</script>
    <style>
         #cke_content{
            width:640px !important;
        }
    </style>
		<form action="{:U('pre?id='.$id)}" method="post" class="form-condensed mw-980px" enctype="multipart/form-data" >
			<table align="center" class=" table-form iframeContentop">
				<tbody>
				<tr>
					<th class="thtop">备注</th>
					<td class="" colspan="2">
						<textarea id="content" name="content" style="width: 550px;height: 200px" class="ckeditor"></textarea>
					</td>
				</tr>
				<tr>
					<th></th>
					<td>
					<div class="rightdiv">
						<button type="button" class="btn btn-default"
								onclick="choose1()"><i class="icon-goback icon-level-up icon-large icon-rotate-270"></i> 返回</button>
								
						<a href="javascript:;" id="submit" class="btn btn-primary" onclick="choose()" ><i class="icon-upload-alt"></i> 提交</a></div>
					</td>
				</tr>
				</tbody>
			</table>
		</form>
</block>

<block name="script">
	<script src="__STATIC__/thinkbox/jquery.thinkbox.js"></script>

	<script type="text/javascript">
        var state = "{$offer.static}";
        var pid = "{$offer.pid}";
		function choose() {
            if(state==3 && pid==0){
                if(confirm("是否确认修改已生效的报价单？")){
                    $('form').submit();
                }
            }else{
                $('form').submit();
            }
		}
		function choose1(){
			window.parent.choose();
		}
	//搜索功能
	$("#search").click(function(){
		var url = $(this).attr('url');
        var query  = $('.search-form').find('input').serialize();
        query = query.replace(/(&|^)(\w*?\d*?\-*?_*?)*?=?((?=&)|(?=$))/g,'');
        query = query.replace(/^&/g,'');
        if( url.indexOf('?')>0 ){
            url += '&' + query;
        }else{
            url += '?' + query;
        }
		window.location.href = url;
	});
	//回车搜索
	$(".search-input").keyup(function(e){
		if(e.keyCode === 13){
			$("#search").click();
			return false;
		}
	});
	</script>
	<script language='javascript'>

	</script>
</block>
