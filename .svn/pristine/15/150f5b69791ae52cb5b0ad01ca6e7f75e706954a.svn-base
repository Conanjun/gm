                            <a href="{$_url_}&lang=en" class="nav-language-en">
                                <span>{:L('EN_US')}</span>
                            </a>
                        </div>
                    </li>
                    <volist name="__MENU__.main" id="menu">
                        <li>
                            <a href="javascript:;">
                                <i class="fa {$menu.icon_class}"></i>
                                <span class="nav-label">{$menu.title|L}</span>
