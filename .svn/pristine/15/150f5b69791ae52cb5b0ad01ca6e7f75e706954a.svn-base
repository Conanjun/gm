                                    <span class="fa arrow"></span>
                                </notempty>
                            </a>
                            <notempty name="menu.child">
                                <ul class="nav nav-second-level collapse">
                                    <volist name="menu.child" id="child">
                                        <li class="{$child.a}">
                                            <a href="{$child.url|U}">{$child.title|L}</a>
