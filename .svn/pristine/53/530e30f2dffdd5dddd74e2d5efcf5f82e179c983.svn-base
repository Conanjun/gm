                                                                                                          class="btn iframe"><i
                                    class="icon-project-close icon-info-sign"></i>提醒</a></if>
                            <if condition="cando('Task/reply',null,$info['pid'])"><a data-height="400"
                                                                                        href="{:U('Task/reply?id='.$info['tid'])}"
                                                                                        class="btn iframe"><i
                                    class="icon-project-close icon-chat-dot"></i>评论</a></if>
                        </if>

                        <if condition="cando('Offer/module_file',null,$info['pid'])"><a href="{:U('Offer/module_file?id='.$info['mid'])}"
                                                                                           data-title="{$info['title']}-参考" class="btn iframe"><i
                                class="icon-copy icon-off"></i>参考</a></if>
                        <if condition="cando('TaskFromMe/edit',array($info['uid']),$info['pid'])">
                            <if condition="$info['state'] != -1">
                                <a href="{:U('TaskFromMe/edit?id='.$info['tid'])}" class="btn " data-title="编辑"><i
                                        class="icon-common-edit icon-pencil"></i>编辑</a>
                            </if>
                        </if>
                    </div>
                    <a href="javascript:history.go(-1);" class="btn"  style="margin-left: 10px" data-title="返回"><i
                            class="icon-goback icon-level-up icon-large icon-rotate-270"></i> 返回</a>
                </div>

            </div>

            <div class="col-side">
                <div class="main main-side" style="margin-left: 0;">

                    <fieldset>
                        <legend>基本信息</legend>
                        <table class="table table-data table-condensed table-borderless">
                            <tbody>
                            <tr>
                                <th width="100px">任务名称</th>
                                <td><strong>{$info.title}</strong></td>
                            </tr>
                            <tr>
                                <th>标准库</th>
                                <td>{$info.pcname}
                                    <if condition="$info['gname']!=''">-{$info.gname}</if>
                                    <if condition="$info['o_name']!=''">-{$info.o_name}</if>
                                </td>
                            </tr>
                            <tr>
                                <th>优先级</th>
                                <td
                                <if condition="$info['level']==2">style="color:red"</if>
                                >{$info.d_key}</td>
                            </tr>
                            <tr>
                                <th>周期</th>
                                <td>{$info.days}d</td>
                            </tr>
                            <tr>
                                <th>标准工时</th>
                                <td>{$info.hours}h</td>
                            </tr>
                            <tr>
                                <th>完成工时</th>
                                <td>{$info.finishours}h</td>
                            </tr>
                            <tr>
                                <th>挣值</th>
                                <td>
                                    <if condition="$info['state'] == 3 && $info['amount']">
                                        {$info['amount']|fomatprice}
                                    </if>
                                </td>
                            </tr>
                            <tr>
                                <th>任务类型</th>
                                <td>
                                    <if condition="$info['delivery'] eq 1">
                                        交付任务
                                        <else/>
                                        {$info.typename}
                                    </if>

                                </td>
                            </tr>

                            <tr>
                                <th>计划时间</th>
                                <td>
                                    <gt name="info.pstime" value="0">{$info.pstime|time_format=###,'Y/m/d'}</gt>
                                    -
                                    <if condition="$info['format_petime'] lt $nowDay and $info['state'] neq 3 and $info['state'] neq -1 "><span style="color:#f51212">
                                          <gt name="info.petime" value="0">{$info.petime|time_format=###,'Y/m/d'}</gt>(已延期)
                                        </span>
                                        <else/>
                                        <gt name="info.petime" value="0">{$info.petime|time_format=###,'Y/m/d'}</gt>
                                        </if>
                                </td>

                            </tr>

                            <tr>
                                <th>实际时间</th>
                                <td>
                                    <gt name="info.stime" value="0">{$info.stime|time_format=###,'Y/m/d'}</gt>
                                    -
                                    <gt name="info.etime" value="0">{$info.etime|time_format=###,'Y/m/d'}</gt>
                                </td>
                            </tr>

                            <tr>
                                <th>创建人</th>
                                <td>{$info.uname}</td>
                            </tr>
                            <tr>
                                <th>创建时间</th>
                                <td>
                                    <gt name="info.addtime" value="0">{$info.addtime|time_format=###,'Y-m-d H:i'}</gt>
                                </td>
                            </tr>

                            <tr>
                                <th>分派人</th>
                                <td>{$info.manageruname}</td>
                            </tr>
                            <tr>
                                <th>执行人</th>
                                <td>{$info.assignedname}</td>
                            </tr>
                            <tr>
                                <th>分派时间</th>
                                <td>
                                    <gt name="info.assignedtime" value="0">{$info.assignedtime|time_format=###,'Y-m-d
                                        H:i'}
                                    </gt>
                                </td>
                            </tr>

                            <tr>
                                <th>关闭用户</th>
                                <td>{$info.closeuname}</td>
                            </tr>
                            <tr>
                                <th>关闭原因</th>
                                <td>{$info.closereason}</td>
                            </tr>
                            <tr>
                                <th>关闭时间</th>
                                <td>
                                    <gt name="info.closetime" value="0">{$info.closetime|time_format=###,'Y-m-d H:i'}
                                    </gt>
                                </td>
                            </tr>

                            <tr>
                                <th>审核用户</th>
                                <td>{$info.checkuname}</td>
                            </tr>
                            <tr>
                                <th>审核时间</th>
                                <td>
                                    <gt name="info.checktime" value="0">{$info.checktime|time_format=###,'Y-m-d H:i'}
                                    </gt>
                                </td>
                            </tr>

                            <tr>
                                <th>完成用户</th>
                                <td>{$info.finishuname}</td>
                            </tr>
                            <tr>
                                <th>完成备注</th>
                                <td>{$info.finishcontent}</td>
                            </tr>


                            </tbody>
                        </table>
                    </fieldset>

                    <notempty name="process">


                        <legend>审核信息</legend>
                        <table class="table table-condensed table-hover table-striped tablesorter table-fixed table-selectable"
                               style="border: 1px solid #ddd;">
                            <tbody style="text-align: center;">
                            <tr>
                                <th width="20px" style="padding-left: 20px;"></th>
                                <th>审核人</th>
                                <th style="text-align: center;width: 80px">审核状态</th>
                                <th style="text-align: center;width: 120px">操作时间</th>
                            </tr>
                            <notempty name="process">
                                <foreach name="process" item="vo" key="k">
                                    <tr style="border-top: 1px solid #f00;">
                                        <td rowspan="2" style="border-right: 1px solid #ddd;">{$k+1}</td>
                                        <td style="text-align: left">{$vo.checkname}</td>
                                        <td class="<if condition=" $vo[
                                        'state'] == -1 ">textr</if>
                                        <if condition="$vo['state'] == 1 ">textg</if>
                                        <if condition="$vo['state'] == 0 ">textc</if>
                                        ">
                                        <if condition="$vo['state'] == 0 ">
                                            未审核
                                            <elseif condition="$vo['state'] == 1 "/>
                                            已审核
                                            <elseif condition="$vo['state'] == -1 "/>
                                            已拒绝
                                        </if>
                                        </td>
                                        <td>
                                            <if condition="$vo['state'] == 1 ">
                                                {$vo.checktime|time_format}
                                                <elseif condition="$vo['state'] == -1 "/>
                                                {$vo.refusetime|time_format}
                                            </if>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" style="text-align: left;">
                                            <div style="min-height: 50px" class="<if condition=" $vo[
                                            'state'] == -1 ">textr</if>
                                            <if condition="$vo['state'] == 1 ">textg</if>
                                            <if condition="$vo['state'] == 0 ">textc</if>
                                            ">
                                            <if condition="$vo['state'] == 1 ">
                                                {$vo.checknote}
                                                <elseif condition="$vo['state'] == -1 "/>
                                                {$vo.refusenote}
                                            </if>
                </div>
                </td>
                </tr>
                </foreach>
                </notempty>
                </tbody>
                </table>

                </notempty>


            </div>
        </div>
    </div>
    </div>


</block>

<block name="script">
    <script type="text/javascript">
        //导航高亮
        highlight_subnav("{$from_url}");

        function tijiao() {
            $('form').attr('action', "{:U('edit?act='.$offer['static'].'&id='.$offer['oid'])}");
            $('form').submit()
        }

        function baocun() {
            $('form').attr('action', "{:U('edit?act=2&id='.$offer['oid'])}");
            $('form').submit()
        }

        Think.setValue("coreservice", "{$offer.coreservice|default = 0}");
        Think.setValue("type", "{$offer.type|default = 0}");
        Think.setValue("chance", "{$offer.chance|default = 0}");
        Think.setValue("disoff", "{$offer.disoff|default = 0}");

        function renovate() {
            $.closeModal();
            //location.replace(location.href);
            location.reload(true);
        }

        function choose(r) {
            $.closeModal();
            if (r) {
                location.reload(true);
                //location.replace(location.href);
            }
        }

    </script>
</block>
