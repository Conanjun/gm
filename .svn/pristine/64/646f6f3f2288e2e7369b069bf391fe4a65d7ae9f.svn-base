<extend name="Public/base" />
<block name="navhead">
    <li data-id="account"><span id="myname" style="color: #000"> <a href="{:U('Offer/veiw?id='.$offer['oid'])}"><i class="icon-map-marker"></i>&nbsp;
        <if condition="$offer['cname']">
			{$offer.cname}-{$offer.projectname}
		<else/>
			{$offer.projectname}
		</if></a>&nbsp;<i class="icon-caret-down"></i>&nbsp;</span>
    </li></block>

<block name="body">
<script src='__JSNEW__/jquery.validate.js' type='text/javascript'></script>
<link href="__CSS__/n.css" rel="stylesheet"  type="text/css" />
<script>
$(function(){
    $("[name='groupid']").change(function(){
        if($(this).val()!=""&&$(this).val()!=null){
            $(this).next('div.chosen-container').children().removeClass("error");
        }
    });
	$('form').validate({
	    errorPlacement: function (error, element) {
	        $(element).next('.field_notice').hide();
	        $(element).parent().next().append(error);
            if($(element).css("display")=='none'){
                $(element).next('div.chosen-container').children().addClass("error");
            }
	    },
	    onkeyup: false,
	    rules: {
	    	name: {
	            required: true,
	        },
	        price: {
	            required: true,
	        },
	        quantity: {
	            required: true,
	        },
	        unit: {
	            required: true,
	        },
	        days: {
	            required: true,
	        },
            hour: {
                required: true,
            },
            groupid: {
                required: true,
            },
	    },
	    messages: {
	    	name: {
	    		required : '',
	        },
	        price: {
	    		required : '',
	        },
	        quantity: {
	    		required : '',
	        },
	        unit: {
	    		required : '',
	        },
	        days: {
	    		required : '',
	        },
            hour: {
                required: '',
            },
            groupid: {
                required: '',
            },

	    }
	});
});

</script>
<div>
	<div id="titlebar">
		<div class="heading">
			<span class="prefix"><i class="icon-user"></i> </span> <strong><small
				class="text-muted"><i class="icon-plus"></i> </small> 添加报价单明细</strong>
				<div class="actions">
                <div class="btn-group"></div>
                <a href="javascript:history.go(-1);" class="btn" title="返回" ><i class="icon-goback icon-level-up icon-large icon-rotate-270"></i> 返回</a>
            </div>
		</div>
	</div>
	<form action="{:U('subadd?oid='.$oid)}" method="post" class="form-condensed">
		
		<table align="center" class="table table-form mytable ntable" style="border: 0;width: 1100px;margin: 0">
			<tbody>
            <tr>
                <th width="80px">服务角色<span class="required"></span></th>
                <td colspan="3">
                    <div class="input-group">
                        <select name="groupid" class="form-control searchSelect chosen">
                            <option value=""></option>
                            <volist name="group" id="vo">
                                <option value="{$vo.groupid}">{$vo.name}</option>
                            </volist>
                        </select>
                    </div>
                </td>
                <td style="width: 300px"></td>
            </tr>
				<tr>
					<th class="w-120px">内容名称<span class="required"></span></th>
					<td colspan="3"><input type="text" name="name"
						 value="" class="form-control" autocomplete="off" placeholder="请输入内容名称">
					</td>
					<td></td>
				</tr>
				 <tr>
                    <th class="w-90px">价格<span class="required"></span></th>
                    <td>
                            <input type="number" step="50" min="0" name="price"  value="" class="form-control" autocomplete="off" placeholder="价格">
                           
                    </td>
                     <th class="w-90px">数量<span class="required"></span></th>
                    <td>
                            <input type="number" step="5" min="0" name="quantity"  value="" class="form-control" autocomplete="off" placeholder="数量">
                         
                    </td>
                    <td></td>
                </tr>
                
                <tr>
                    <th class="w-90px">单位<span class="required"></span></th>
                    <td>
                        	<select name="unit" class="form-control">
                                <foreach name="unit" item="u">
                                    <option value="{$u.d_key}">{$u.d_value}</option>
                                </foreach>
                            </select>
                    </td>
                    <td></td>
                </tr>
                
                <tr>
                    <th class="w-90px">周期(d)<span class="required"></span></th>
                    <td>
                        
                            <input type="number" name="days"  value="" class="form-control" autocomplete="off" min="0" placeholder="请输入制作周期">
                        
                    </td>
                    
                    <th class="w-90px">工时(h)<span class="required"></span></th>
                    <td>
                       
                            <input type="number" name="hour"  class="form-control" autocomplete="off" min="0.0" placeholder="请输入工时">
                      
                    </td>
                    <td></td>
                </tr>
                
                <tr>
                    <th class="w-90px">备注</th>
                    <td colspan="4">
                   <textarea class="form-control" name="note" rows="" cols="" style="width: 100%;height: 100px;"></textarea>
                    </td>
                </tr>
                
				<tr>
					<th></th>
					<td colspan="4"><div class="rightdiv">
						<a href="javascript:history.go(-1);" class="btn btn-back"><i class="icon-goback icon-level-up icon-large icon-rotate-270"></i> 返回</a>
						<a href="javascript:;" id="submit" class="btn btn-primary" onclick="baocun();" data-loading="稍候..."><i class="icon-save"></i> 保存</a></div>
					</td>
				</tr>
			</tbody>
		</table>
	</form>
</div>
</block>

<block name="script"> <script type="text/javascript">
        //导航高亮
        highlight_subnav("{:U('Offer/index')}");
        var state = "{$static}";
        function baocun(){
            if(state==3){
                if(confirm("是否确认修改已生效的报价单？")){
                    $('form').submit();
                }
            }else{
                $('form').submit();
            }
        }
    </script> </block>
