<extend name="Public/base" />

<block name="body">
<script src='__JSNEW__/jquery.validate.js' type='text/javascript'></script>
	<script src='__JSNEW__/jquery.datetimepicker.full.js' type='text/javascript'></script>
	<link href="__CSS__/jquery.datetimepicker.css" rel="stylesheet"  type="text/css" />
	<link href="__CSS__/n.css" rel="stylesheet"  type="text/css" />
<script>
$(function(){
    $('#birthday').datetimepicker({step:10,lang:'ch',timepicker:false,format:'Y-m-d'});
    jQuery.validator.addMethod("isMobile", function(value, element) {
        var length = value.length;
        var mobile = /^(13[0-9]{9})|(18[0-9]{9})|(14[0-9]{9})|(17[0-9]{9})|(15[0-9]{9})$/;
        return this.optional(element) || (length == 11 && mobile.test(value));
    }, "请正确填写您的手机号码");
    $('form').validate({
	    errorPlacement: function (error, element) {
	        $(element).next('.field_notice').hide();
            var dept =  $(element).find('option:selected').val();
            if(!dept || dept == null || dept == undefined){
                $(element).next('div.chosen-container').children().addClass("error");
            }
	    },
	    onkeyup: false,
	    rules: {
	    	username: {
	            required: true,
	         /*   byteRange: [3, 15, 'utf-8'],*/
	            remote: {
	                url: "{:U('User/check_user')}",
	                type: 'post',
	                data: {
	                    username: function () {
	                        return $('#username').val();
	                    }
	                }
	            }
	        },
	       /* repassword: {
	            required: true
	        },*/
	        password: {
	            required: true,
	            maxlength: 20,
	            minlength: 6
	        },
            nickname: {
                required: true
            },
            dept: {
                required: true
            },
            email: {
                required: true,
                email:true,
                remote: {
                    url: "{:U('User/check_email')}",
                    type: 'post',
                    data: {
                        email: function () {
                            return $('#email').val();
                        }
                    }
                }
            },
            mobile: {
                required: true,
                isMobile:true,
                remote: {
                    url: "{:U('User/check_mobile')}",
                    type: 'post',
                    data: {
                        mobile: function () {
                            return $('#mobile').val();
                        }
                    }
                }
            },
             jobnum:{
                remote: {
                    url: "{:U('User/check_jobnum')}",
                    type: 'post',
                    data: {
                        jobnum: function () {
                            return $('#jobnum').val();
                        }
                    }
                }
            },
	    },
	    messages: {
	    	username: {
	    		required : '', // 用户名不能为空
               /* byteRange: '工号长度应在3-15个字符之间'*/
	            remote: '' //用户名已被占用
	        },
	       /* repassword: {
	            required: '确认密码必填'
	        },*/
	        password: {
	        	required : '密码不能为空',
                maxlength: '密码长度应在6-20个字符之间',
				minlength: '密码长度应在6-20个字符之间'
	        },
            nickname: {
                required: '姓名不能为空',
            },
            dept: {
                required:'请选择部门',
            },
            email: {
                required: '邮箱不能为空',
                email:'邮箱格式不正确',
                remote: '邮箱已被占用'
            },
            mobile: {
                required: '手机号不能为空',
                isMobile:'手机格式不正确',
                remote: '手机号已被占用'
            },
            jobnum:{
                remote:'工号已被占用',
            }
	    }
	});
});
$(function () {
    $("[name='dept']").change(function(){
        if($(this).val()!=""&&$(this).val()!=null){
            $(this).next('div.chosen-container').children().removeClass("error");
        }
    });
})
</script>
	<div id="titlebar">
		<div class="heading">
			<span class="prefix"><i class="icon-user"></i> </span> <strong><small
				class="text-muted"><i class="icon-plus"></i> </small> 添加人员</strong>
		</div>
	</div>
	<form action="{:U()}" method="post" class="form-condensed  mw-1300px">
		<table align="center" class="table table-form mytable ntable" style="width:850px;border:0">
			<tbody>
				<tr>
					<th class="w-120px">用户名 <span class="required"></span></th>
					<td >
						<input type="text" name="username" id="username" value="" class="form-control" autocomplete="off" placeholder="请输入用户名,必填不可重复">
					</td>
					<th class="w-120px">密码 <span class="required"></span></th>
					<td >
						<input type="password" name="password" id="password" value="" class="form-control" autocomplete="off" placeholder="密码长度应在6-20个字符之间">
					</td>
				</tr>
				<tr>
					<th class="w-120px">姓名<span class="required"></span></th>
					<td >
						<input type="text" name="nickname" id="nickname" value="" class="form-control" autocomplete="off" placeholder="请输入姓名,必填">
					</td>
					<th class="w-120px">部门<span class="required"></span></th>
					<td >
						<select class="form-control searchSelect chosen" name="dept">
							<option value>请选择部门</option>
							<volist name="depts" id="r">
								<option value="{$r.did}">{$r.title_show}</option>
							</volist>
						</select>
					</td>
				</tr>
				<tr>
					<th class="w-120px">邮箱<span class="required"></span></th>
					<td ><input type="text" name="email"
						id="email" value="" class="form-control" autocomplete="off"placeholder="请输入邮箱,必填不可重复" >
					</td>
					<th class="w-120px">手机<span class="required"></span></th>
					<td >
						<input type="text" name="mobile" id="mobile" value="" class="form-control" autocomplete="off" placeholder="请输入手机,必填不可重复">
					</td>
				</tr>
				<tr>
					<th class="w-120px">工号</th>
					<td ><input type="text" name="jobnum"  id="jobnum" value="" class="form-control"  autocomplete="off" placeholder="请输入工号">
					</td>
					<th class="w-120px">微信号</th>
					<td >
						<input type="text" name="qq" id="qq" value="" class="form-control" autocomplete="off">
					</td>
				</tr>
				<tr>
					<th class="w-120px">生日</th>
					<td >
						<input type="text" name="birthday" id="birthday" value="" class="form-control" autocomplete="off">
					</td>
					<th class="w-120px">性别</th>
					<td>
						<label class="radio" style="float: left;margin-left: 30px;margin-top: 6px;width: 40px;"><input type="radio" name="sex" value="1">男</label>
						<label class="radio" style="float: left;margin-left: 10px;margin-top: 6px;width: 40px;"><input type="radio" name="sex" value="2" >女</label>
						<label class="radio" style="float: left;margin-left: 10px;margin-top: 6px;width: 40px"><input type="radio" name="sex" value="0" checked >保密</label>
					</td>
				</tr>
				<tr>
					<td colspan="4">
						<div class="rightdiv">
							<a href="javascript:history.go(-1);" class="btn btn-back"><i class="icon-goback icon-level-up icon-large icon-rotate-270"></i> 返回</a>
							<a href="javascript:;" id="submit" class="btn btn-primary" onclick="$('form').submit();" data-loading="稍候..."><i class="icon-save"></i> 保存</a>
						</div>
					</td>

				</tr>
			</tbody>
		</table>
	</form>

</block>

<block name="script"> <script type="text/javascript">
        //导航高亮
        highlight_subnav("{:U('User/index')}");
    </script> </block>
