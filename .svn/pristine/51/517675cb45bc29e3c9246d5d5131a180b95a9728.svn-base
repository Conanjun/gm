       $.closeModal();
       window.location.href= window.location;
   }
   function workbreak(content,pid) {
       var items = '';
       items = items.substr(0, (items.length - 1));
       $.ajax({
           type: "POST",
           url: "{:U('ProjectNew/workbreak')}",
           data: {content: content, pid: pid, psids: items},
           dataType: "json",
           success: function (data) {
               if (data.done) {
                   choose();
               } else {
                   alert(data.msg);
               }
           }
       });
   }

</script> </block>
