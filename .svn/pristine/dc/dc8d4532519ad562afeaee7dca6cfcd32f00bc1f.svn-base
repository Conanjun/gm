    <script>
        var error_box = $("#errorModal");
        $(function () {
            $("#close").click(function () {
                var id = "{$info.order_id}";
                var url = "{:U('PlatOrder/close')}";
                $.ajax({
                    url: base.url + url,
                    type: 'POST',
                    data: {'id': id},
                    dataType: 'json',
                    beforeSend: function () {
                    },
                    success: function (res) {
                        if (res.status == 1) {
                            window.location.href = res.url;
                        } else {
                            modal.text(error_box, res.info);
                            modal.open(error_box);
                        }
                    },
                    error: function (err) {
                    }
                })
            })
        });
    </script>
