<extend name="Public/base"/>
    <!-- content begin -->
<block name="body">

    <div class="wrapper wrapper-content">

        <div class="row">
            <div class="col-lg-12">
                <!-- ibox begin -->
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>{:L('DENTAL_FEEDBACK')}</h5>
                    </div>

                    <div class="ibox-content">

                        <div class="row">
                            <div class="col-lg-12">
                                <form method="get" class="form-horizontal">
                                    <input type="hidden" name="s" value="/Studio/Feedback/index"/>
                                    <table>
                                        <tbody>
                                        <tr>
                                            <td>
                                                <label>{:L('STATUS')}</label>
                                                <select class="form-control m-b"  name="feed_status">
                                                    <option value="">{:L('PLEASE_SELECT')}</option>
                                                    <volist name="feed_status" id="s">
                                                        <option value="{$s.d_key}" <if condition=" $Think.get.feed_status eq $s['d_key']"> selected </if>>{$s.d_value|L}</option>
                                                    </volist>
                                                </select>
                                            </td>
                                            <td>
                                                <label>{:L('FEED_TYPE')}</label>
                                                <select class="form-control m-b"  name="feedtype">
                                                    <option value="">{:L('PLEASE_SELECT')}</option>
                                                    <volist name="feed_type" id="d">
                                                        <option value="{$d.d_key}" <if condition=" $Think.get.feedtype eq $d['d_key']"> selected </if>>{$d.d_value|L}</option>
                                                    </volist>
                                                </select>
                                            </td>
                                            <td>
                                                <label>{:L('NAME')}</label>
                                                <input class="form-control w-100" type="text" name="name" value="{$Think.get.name}">
                                            </td>
                                            <td>
                                                <label>{:L('SUBMIT_TIME')}</label>
                                                <input class="form-control w-100" type="text"  id="start_addtime" name="start_addtime" value="{$Think.get.start_addtime}">
                                                <input class="form-control w-100" type="text" id="end_addtime" name="end_addtime" value="{$Think.get.end_addtime}">
                                            </td>
                                            <td>
                                                <label>{:L('RESPOND_TIME')}</label>
                                                <input class="form-control w-100" type="text" id="start_backtime" name="start_backtime" value="{$Think.get.start_backtime}">
                                                <input class="form-control w-100" type="text" id="end_backtime" name="end_backtime" value="{$Think.get.end_backtime}">
                                            </td>
                                            <td>
                                                <input type="submit" class="btn btn-primary" value="{:L('QUERY')}">
                                                <if condition="$filtered neq 0">
                                                    <a href="{:U('Feedback/index')}" class="btn btn-default">{:L('BACKOUT')}</a>
                                                </if>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                      
                        
                        <div class="table-responsive">
                            <table class="table table-center">
                                <thead>
                                <tr>
                                    <th style="width: 80px">{:L('STATUS')} </th>
                                    <th style="text-align: left">{:L('CLINIC_NAME')}</th>
									<th style="text-align: left">{:L('FEED_TYPE')} </th>
									<th style="text-align: left">{:L('FEED_CONTENT')}</th>
                                    <th style="text-align: left">{:L('SUBMIT_TIME')}</th>
                                    <th style="text-align: left">{:L('SUBMIT_USER')}</th>
                                    <th style="text-align: left">{:L('RESPOND_TIME')}</th>
                                    <th style="width: 120px">{:L('OP')}</th>
                                </tr>
                                </thead>
                                <tbody>
                                <notempty name="lists">
                                    <volist name="lists" id="vo">
                                        <tr>
                                            <td>
                                               <div class="checkbox checkbox-success">
                                                    <input type="checkbox" name="check" value="{$vo['id']}" class="check"><label></label>
                                                </div>
                                            </td>
                                            <td>{$vo['status']|L}</td>
                                            <td style="text-align: left">{$vo['dname']}</td>
											 <td style="text-align: left">{$vo['type']|L}</td>
											  <td style="text-align: left">{$vo['content']}</td>
                                            <td style="text-align: left">{$vo['addtime']|date="Y-m-d",###}</td>
                                            <td style="text-align: left">{$vo['nickname']}</td>
                                            <td style="text-align: left">
                                                <if condition="$vo.backtime neq 0"> {$vo['backtime']|date="Y-m-d H:i:s",###}</if>
                                            </td>
                                            <td>
                                                <a href="{:U('Feedback/info?id='.$vo['id'])}" class="btn btn-xs btn-primary">{:L('INFO')}</a>
                                            </td>
                                        </tr>
                                    </volist>
                                <else />
                                   <tr>
                                       <td colspan="9">{:L('NOCONCENT')}</td>
                                   </tr>
                                </notempty>

                                </tbody>
                            </table>
                        </div>

                        <div class="iviews-pager clearfix">
                            <div class="btn-group pull-right">
                                {$_page}
                            </div>
                        </div>

                    </div>
                </div>
                <!-- ibox end -->
            </div>
        </div>

    </div>
    <!-- content end -->

    <script src='__JSNEW__/jquery.datetimepicker.full.js' type='text/javascript'></script>
    <link href="__CSS__/jquery.datetimepicker.css" rel="stylesheet" type="text/css"/>

    <script>
        $(document).ready(function(){
            $('#start_addtime').datetimepicker({
                value:'',
                lang:'ch',
                timepicker:false,format:'Y/m/d'
            });
            $('#end_addtime').datetimepicker({
                value:'',
                lang:'ch',
                timepicker:false,format:'Y/m/d'
            });
            $('#start_backtime').datetimepicker({
                value:'',
                lang:'ch',
                timepicker:false,format:'Y/m/d'
            });
            $('#end_backtime').datetimepicker({
                value:'',
                lang:'ch',
                timepicker:false,format:'Y/m/d'
            });
        });
    </script>
</block>

