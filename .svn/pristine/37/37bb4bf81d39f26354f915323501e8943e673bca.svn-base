<extend name="Public/base"/>
<block name="body">
    <script type="text/javascript">
        var ajaxurl = "{:U('Payment/ajax_col')}";
    </script>
    <!-- content begin -->
    <div class="wrapper wrapper-content">

        <div class="row">
            <div class="col-lg-12">
                <!-- ibox begin -->
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>{:L('PAYMENT')}</h5>
                    </div>

                    <div class="ibox-content">
                        
                        <div class="table-responsive">
                            <table class="table table-center">
                                <thead>
                                <tr>
                                    <th style="width: 200px;text-align: left">{:L('PAYMENT_METHOD_NAME')} </th>
                                    <th style="width: 80px;text-align: left">{:L('STATE')}</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                <notempty name="lists">
                                    <volist name="lists" id="vo">
                                        <tr>
                                            <td style="text-align: left;padding-left: 10px">{:L($vo['name'])}</td>
                                            <td style="text-align: left">
                                                <if condition="$vo['enabled']">
                                                    <img src="__IMG__/positive_enabled.png" ectype="inline_edit" fieldname="enabled" fieldid="{$vo.payid}" fieldvalue="1" title="{:L('EDITABLE')}"/>
                                                    <else/>
                                                    <img src="__IMG__/positive_disabled.png" ectype="inline_edit" fieldname="enabled" fieldid="{$vo.payid}" fieldvalue="0" title="{:L('EDITABLE')}"/>
                                                </if>
                                            </td>
                                            <td></td>
                                        </tr>
                                    </volist>
                                <else />
                                   <tr>
                                       <td colspan="9">{:L('NOCONCENT')}</td>
                                   </tr>
                                </notempty>

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!-- ibox end -->
            </div>
        </div>

    </div>
    <!-- content end -->
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</block>

