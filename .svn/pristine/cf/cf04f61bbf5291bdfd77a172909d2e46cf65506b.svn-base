                   </notempty>

                </tbody>
            </table>
            <div style="width:1060px;margin-top:10px">
            <div style="float:right;margin-right:-28px">
            <a href="javascript:;"  class="btn btn-default"  onclick="addItem();">增加一条风险记录</a>
            <a href="javascript:window.parent.choose()"  id="preBtn"  class="btn btn-default" ><i class="icon-goback icon-level-up icon-large icon-rotate-270"></i> 返回</a>
            <a  href="javascript:;" onclick="baocun(this)" id="breakBtn" class="btn btn-primary"><i class="icon-save"></i> 保存</a>
            </div> </div>
        </form>
      <div id="loadertip" style="display:none">
        <div class="modal fade modal-loading in" style="display: block;"><div class="icon-spinner icon-spin loader"></div>
        </div>
        <div class="modal-backdrop fade in"></div>
    </div>
</block>
<block name="script">
    <script>
         //导航高亮
	highlight_subnav("{:U('ProjectNewFromMe/index')}");
        function baocun(){
            t=true;
            $("input[name='title[]']").each(function(){
                name=$(this).val();
                if(name==''||name==undefined ||name==null){
                    t=false;
                    tip="<p style='color:#FF0000'>主题不可为空</p>";
                    $(this).attr('data-content',tip);
                    $(this).popover({"html": true, trigger: "focus"});
                    $(this).popover('show');
                    $(this).focus();return false;
                }else{
                      $(this).popover({"html": true, trigger: "focus"});
                      $(this).popover('destroy');
                }
            })
            if(t){
                $('form').submit();
                $('#loadertip').show();
            }
		}
			$('#preBtn').click(function(){
		    $('#loadertip').show();
        })
	/*	$('.icon-remove').live('click',function(){

		    $(this).closest('tr').remove();
        })*/
        function deleteItem(obj,rid,url) {
            if(rid){
                if(confirm("确定要删除数据吗？")){
                    $.ajax({
                        type: 'get',
                        url:url,
                        error: function () {
                            alert('网络繁忙，请稍后再试');
                        },
                        success: function (data) {
                            if(data.done){
                                num=$('.riskdata').size();
                                if(num==1){
                                    $(obj).closest('tr').remove();
                                    addItem();
                                    $('.icon-remove').hide()
                                }else{
                                     $(obj).closest('tr').remove();
                                }
                            }else{
                                alert(data.msg);
                            }
                        }
                    });
                }
            }else{
                if($('.riskdata').size()==1) return;
              $(obj).closest('tr').remove();
            }
        }


		/*  $("input[name='name[]']").live('blur',function(){
            var name=$(this).val();
            if(name !=''|| name !=undefined || name!=null){
                $(this).popover({"html": true, trigger: "focus"});
                $(this).popover('destroy');

            }
        })*/

