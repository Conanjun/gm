                                    <select name="probability[]"class="form-control searchSelect chosen">
                                        <volist name="changes" id="v">
                                            <option value="{$v.d_value}" >{$v.d_key}</option>
                                        </volist>
                                    </select>
                                    </div>
                            </td>
                          </tr>
                       <tr>
                              <th style="width: 100px">风险原因</th>
                              <td style="width: 932px" colspan="5">
