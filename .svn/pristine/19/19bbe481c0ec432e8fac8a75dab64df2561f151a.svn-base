	<script>
		$(function(){
		    //获取项目下所有的任务
             var pid = "{$s['pid']}";
             var psid = "{$s['psid']}";
            var ajaxurl = "{:U('ProjectNew/get_task')}";
            if(pid){
                $.ajax({
                    type: 'post',url: ajaxurl,data:{pid:pid,psid:psid},dataType:"json",success: function (response) {
