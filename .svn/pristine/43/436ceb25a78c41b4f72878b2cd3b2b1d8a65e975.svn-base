<extend name="Public/base" />
<block name="btnarea">
<li class="right"><a href="{:U('Examine/add')}"><i
		class="icon-plus"></i>&nbsp;新增审批流 </a></li>
</block>

<block name="body">
	<include file="Public/search" />
    <!-- 数据列表 -->
    <div class="data-table table-striped">
	<table
		class="table table-condensed table-hover table-striped tablesorter table-fixed table-selectable" style="text-align: center">
    <thead>
        <tr>
		<th width="30"></th>
		<th class="text-left">审批流名称</th>
		<th class="text-left">备注</th>
		<th width="120"><span class="sort" ectype="order_by" fieldname="addtime">添加时间</span></th>
		<th width="90">添加人</th>
		<th width="100">操作</th>
		</tr>
    </thead>
    <tbody>
		<notempty name="_list">
		<volist name="_list" id="vo">
		<tr>
            <td class="cell-id"><input class="ids" type="checkbox" name="id[]"
					value="{$vo.eid}" />
				</td>
			<td class="text-left">{$vo.name} </td>
			<td class="text-left">{$vo.enote}</td>
			<td>{$vo.addtime|time_format}</td>
			<td>{$vo.uname}</td>
			<td>
			<a href="{:U('Examine/sub?id='.$vo['eid'])}"
						>流程</a>
				<a href="{:U('Examine/edit?id='.$vo['eid'])}"
						>编辑</a>
				<a href="{:U('Examine/deletedata?id='.$vo['eid'])}"
					class="confirm ajax-get">删除</a>
                </td>
		</tr>
		</volist>
		<else />
		<td colspan="6" class="text-center table_nodata"> aOh! 暂时还没有内容! </td>
		</notempty>
	</tbody>
	<tfoot>
			<tr>
				<td colspan='6'>
					<div class="table-actions clearfix">
						<div class="checkbox btn">
							<label><input type="checkbox" data-scope=""
								class="rows-selector"> 选择</label>
						</div>
	            <button class="btn btn-default ajax-post confirm"
							url="{:U('Examine/deletedata')}"
							target-form="ids">删 除</button>
						
					</div>
					<div style="float: right; clear: none;" class="pager form-inline">{$_page}</div>
				</td>
			</tr>
		</tfoot>
    </table>
	</div>
</block>

<block name="script">
	<script src="__STATIC__/thinkbox/jquery.thinkbox.js"></script>

	<script type="text/javascript">
	//搜索功能
	$("#search").click(function(){
		var url = $(this).attr('url');
        var query  = $('.search-form').find('input').serialize();
        query = query.replace(/(&|^)(\w*?\d*?\-*?_*?)*?=?((?=&)|(?=$))/g,'');
        query = query.replace(/^&/g,'');
        if( url.indexOf('?')>0 ){
            url += '&' + query;
        }else{
            url += '?' + query;
        }
		window.location.href = url;
	});
	//回车搜索
	$(".search-input").keyup(function(e){
		if(e.keyCode === 13){
			$("#search").click();
			return false;
		}
	});
    //导航高亮
    highlight_subnav("{:U('Examine/index')}");
	</script>
</block>
