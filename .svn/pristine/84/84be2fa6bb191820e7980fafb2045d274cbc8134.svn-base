<block name="script">
    <script type="text/javascript">
        highlight_subnav("{$from_url}");
        function start(content,pid) {
            $.ajax({
                type: "POST",
                url: "{:U('ProjectNew/start')}",
                data: {content: content, pid: pid},
                dataType: "json",
                success: function (data) {
                    if (data.done) {
                        choose();
                    } else {
                        alert(data.msg);
                    }
                }
            });
        }
        function choose(){
            $.closeModal();
            window.location.href= window.location;
        }
    </script>
